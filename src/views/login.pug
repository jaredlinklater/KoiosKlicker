extends reg-login-parent

block content
  form(method='POST' action='/login')
    img.logo(src="images/KOIOSKlickerLogo.png")
    h2 Log In
    .form-group
      input.form-input(type='text' name='username' placeholder='Username' required)
    .form-group
      input.form-input(type='password' name='password' placeholder='Password' required)
    .form-group
      input.form-submit(type='submit' name='submit' value='Log in')
  p.login-reg-here Don't have an account? 
    a.login-reg-here-link(href='/register') Sign up here
